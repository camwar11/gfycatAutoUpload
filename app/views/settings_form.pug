extends layout

block content
  script.
    function getDirectory(event) {
      alert(event.target.files[0].webkitRelativePath)
    }
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='userName') UserName:
      input#name.form-control(type='text', name='userName' value=(undefined===settings ? '' : settings.userName))
      
      label(for='password') Password:
      input#name.form-control(type='password', name='password' value=(undefined===settings ? '' : settings.password))

      label(for='path') Path to watch:
      input#name.form-control(type='text', name='path' value=(undefined===settings ? '' : settings.path))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg